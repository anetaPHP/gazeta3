    </a>
    <br>
    <br>
    <br>
    <table class="table table-hover" style="margin-left: 100px; margin-right: 300px">
        <thead>
        <tr>
            <th scope="col" width="20px">{{ 'label.id'|trans }}</th>
            <th scope="col" width="40px">{{ 'label.category'|trans }}</th>
            <th scope="col" width="200px">{{ 'label.act'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for kategoria in category %}
            <tr class="table-light">
                <th scope="row">{{ kategoria.id }}</th>
                <td>{{ kategoria.name }}</td>
                <td>
                    <a href="{{ url('category_edit', {'id': category.id}) }}">
                        <button type="button" class="btn btn-success">{{ 'label.edit'|trans }}</button>
                    </a>
                    <a href="{{ url('category_delete', {'id': category.id}) }}">
                        <button type="button" class="btn btn-info">{{ 'label.delete'|trans }}</button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
