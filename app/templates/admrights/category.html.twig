{% block body %}
    <br>
    <br>
    <a href="{{ url('category_new') }}">
        <button type="button" class="btn btn-danger" style="width: 33%">{{ 'label.addcat'|trans }}</button>
    </a>
    <a href="{{ url('category_edit', {'id': category.id}) }}">
        <button type="button" class="btn btn-success" style="width: 33%">{{ 'label.editcat'|trans }}</button>
