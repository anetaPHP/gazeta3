{% extends 'base.html.twig.' %}
{%  block title %} {{ "Strona Admina" }}{% endblock %}
{% block body %}
    <br>
    <a href="{{ path('category_index') }}"><button type="button" class="btn btn-primary btn-lg btn-block"> Zarządzanie kategoriami</button></a>
    <br>
    <a href="{{ path('article_new') }}"><button type="button" class="btn btn-danger" style="margin-left: 100px; width: 49%">Dodaj opowieść</button></a>
    <br>
    <table class="table table-hover" style="margin-left: 100px; margin-right: 300px">
    <thead>
    <tr>
        <th scope="col" width="20px">ID</th>
        <th scope="col" width="400px">Tytuł</th>
        <th scope="col" width="40px">Kategoria</th>
        <th scope="col" width="200px">Akcje</th>
    </tr>
    </thead>
    <tbody>
    {% for artykul in article %}
    <tr class="table-light" >
        <th scope="row">{{ artykul.id }}</th>
        <td>{{ artykul.title }}</td>
        <td> {{ artykul.category.name }} </td>
        <td>
            <a href="{{ url('articleview_show', {'id': artykul.id})}}"><button type="button" class="btn btn-primary" >Wgląd</button></a>
            <a href="{{ url('article_edit', {'id': artykul.id}) }}">
            <button type="button" class="btn btn-success" >Edytuj</button>
            </a>
            <a href="{{ url('article_delete', {'id': artykul.id})}}"><button type="button" class="btn btn-info" >Usuń</button></a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
    <br><br>
{% endblock %}
