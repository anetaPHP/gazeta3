{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Rejestracja' }}
{% endblock %}

{% block body%}
    <div class="jumbotron">
        <h5 class="display-5">Jeszcze jeden krok, aby dodawać komentarze na portalu.</h5>
    </div>
    <ul class="nav nav-tabs" style="margin-left: 50px">
        <li class="nav-item" id="log">
            <a class="nav-link" data-toggle="tab" href="{{ path('app_register') }}"><h2> Rejestracja </h2> </a>
        </li>
    </ul>
    <br><br>
    <div id="myTabContent" class="tab-content" style="margin-left: 150px; margin-right: 500px; margin-top: 50px">
    <div class="tab-pane fade show active">
    <form method="post" action="{{ url('security_login') }}">

        <div class="form-group row">
            <div class="form-group">
                <label class="col-form-label col-form-label-lg" for="inputLarge">Nazwa użytkownika: </label>
                <input class="form-control form-control-lg" id="inputLarge" type="text" required="required"placeholder="login">
                <br>
            </div>

                <div class="form-group" style="margin-left: 120px">
                    <label class="col-form-label col-form-label-lg" for="inputLarge">Hasło: </label>
                    <input class="form-control form-control-lg" id="inputLarge" type="password" required="required" placeholder="hasło">
                </div>

        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-primary btn-lg" type="submit">Rejestracja</button>
    </form>
    </div>
