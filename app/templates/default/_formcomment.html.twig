{% extends 'base.html.twig' %}

{% block bodyx %}

    <br><br>
    {{ form_start(form, { method: attr.method|default('POST'), action: attr.action }) }}
    {% if false == form.vars.valid %}
        {% include 'default/_single_flash_message.html.twig' with {
            type: 'danger',
            message: 'message.form_error'|trans,
        }%}
    {% endif %}
    <div class="form-group" style="margin-left: 230px; margin-right: 700px">
        {{ form_row(form) }}
        {{ form_widget(form) }}
    </div>
    <br>
    <div class="form-group" style="margin-left: 280px">
            <input type="submit" value="{{ submit_label|default('action.save') }}" class="btn btn-primary" />
    </div>


    {{ form_end(form) }}

{% endblock %}

{% block footer %} {% endblock %}