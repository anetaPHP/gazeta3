{% extends 'base.html.twig.' %}
{%  block title %} {{ "Zarządzanie kategoriami" }}{% endblock %}
{% block body %}
    <br>
    <br>
    <a href="{{ url('category_new') }}"><button type="button" class="btn btn-primary btn-lg btn-block" href="">Dodaj kategorię</button></a>
    <br>
    <a href="{{ url('app_admini') }}"><button type="button" class="btn btn-secondary" style="width: 33%">Powrót do strony zarządzania</button></a>
    <br>
    <table class="table table-hover" style="margin-left: 33%; margin-right: 50%">
        <thead>
        <tr>
            <th scope="col" width="15px">ID</th>
            <th scope="col" width="30px">Nazwa kategorii</th>
            <th scope="col" width="150px">Akcje</th>
        </tr>
        </thead>
        <tbody>
        {% for kategoria in category %}
            <tr class="table-light" >
                <th scope="row">{{ kategoria.id }}</th>
                <td>{{ kategoria.name }}</td>
                <td>
                    <a href="{{ url('category_edit', {'id': kategoria.id}) }}">
                        <button type="button" class="btn btn-success" >Edytuj</button>
                    </a>
                    <a href="{{ url('category_delete', {'id': kategoria.id}) }}"><button type="button" class="btn btn-info" >Usuń</button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><br>
{% endblock %}
